<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorGrayBack"
    android:layout_height="match_parent">
    <!--    我的书单头部标题返回按钮-->
    <RelativeLayout
        android:id="@+id/new_construction_title"
        android:layout_width="match_parent"
        android:paddingRight="20dp"
        android:background="@color/colorWhite"
        android:paddingLeft="10dp"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/new_construction_clean"
            android:layout_width="25dp"
            android:layout_centerVertical="true"
            android:layout_height="25dp"
            android:src="@drawable/boult" />
        <TextView
            android:layout_toRightOf="@+id/new_construction_clean"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:text="新建书单"
            android:textSize="16sp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/new_construction_content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/new_construction_title">
        <TextView
            android:id="@+id/content_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手动创建"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/content_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/content_textView"
            android:hint="请输入书单名称（最多15个字）"
            android:layout_marginRight="95dp"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:background="@drawable/new_construction_edit_back"
            />
        <Button
            android:id="@+id/content_btu"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="创建"
            android:textSize="15sp"
            android:background="@drawable/new_construction_btu_back"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/content_textView"
            android:layout_marginLeft="-96dp"
            android:layout_toRightOf="@+id/content_edit"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/new_construction_btu"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="150dp"
        android:layout_below="@+id/new_construction_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏出众好书单"
                android:textColor="#C8C8C8"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mutual_help"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="书友互助完成书单"
                android:textColor="#C8C8C8"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>